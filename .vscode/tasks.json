{
  "version": "2.0.0",
  "tasks": [
    {
      "label": "Configure CMake",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-B",
        "build",
        "-S",
        ".",
        "-DCMAKE_BUILD_TYPE=Debug"
      ],
      "group": "build",
      "problemMatcher": []
    },
    {
      "label": "Build Project",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "build",
        "--config",
        "Debug"
      ],
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "dependsOn": "Configure CMake",
      "problemMatcher": [
        "$gcc"
      ]
    },
    {
      "label": "Build Release",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-B",
        "build-release",
        "-S",
        ".",
        "-DCMAKE_BUILD_TYPE=Release"
      ],
      "group": "build"
    },
    {
      "label": "Build Release Binary",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "build-release",
        "--config",
        "Release"
      ],
      "group": "build",
      "dependsOn": "Build Release"
    },
    {
      "label": "Run Tests",
      "type": "shell",
      "command": "ctest",
      "args": [
        "--test-dir",
        "build",
        "--output-on-failure"
      ],
      "group": "test",
      "dependsOn": "Build Project",
      "problemMatcher": []
    },
    {
      "label": "Clean",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "build",
        "--target",
        "clean"
      ],
      "group": "build"
    },
    {
      "label": "Run Application",
      "type": "shell",
      "command": "./build/test_task",
      "group": "build",
      "dependsOn": "Build Project"
    },
    {
      "label": "Generate Documentation",
      "type": "shell",
      "command": "cmake",
      "args": [
        "-B",
        "build",
        "-S",
        ".",
        "-DBUILD_DOCUMENTATION=ON"
      ],
      "group": "build"
    },
    {
      "label": "Build Documentation",
      "type": "shell",
      "command": "cmake",
      "args": [
        "--build",
        "build",
        "--target",
        "docs"
      ],
      "group": "build",
      "dependsOn": "Generate Documentation"
    }
  ]
}

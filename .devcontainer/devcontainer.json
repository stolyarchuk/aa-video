{
  "name": "C++ CMake Development",
  "build": {
    "dockerfile": "../Dockerfile",
    "context": "..",
    "target": "development"
  },
  "features": {
    "ghcr.io/devcontainers/features/git:1": {},
    "ghcr.io/devcontainers/features/github-cli:1": {}
  },
  "runArgs": [
    "--device=/dev/dri",
    "--userns=keep-id",
    "--annotation=run.oci.keep_original_groups=1"
  ],
  "remoteEnv": {
    "XAUTHORITY": "/tmp/.docker.xauth",
    "DISPLAY": "${localEnv:DISPLAY}",
    "DBUS_SESSION_BUS_ADDRESS": "unix:path=/tmp/user/1000/bus"
  },
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-vscode.cpptools@prerelease",
        "vadimcn.vscode-lldb",
        "matepek.vscode-catch2-test-adapter",
        "zxh404.vscode-proto3",
        "twxs.cmake",
        "maattdd.gitless",
        "humao.rest-client",
        "swindh.enumerator",
        "timonwong.shellcheck"
      ]
    }
  },
  "forwardPorts": [
    8080,
    9090
  ],
  "remoteUser": "ubuntu",
  "initializeCommand": "${localWorkspaceFolder}/.devcontainer/initialize.sh",
  "postCreateCommand": "${containerWorkspaceFolder}/.devcontainer/post_create.sh",
  "postAttachCommand": "${containerWorkspaceFolder}/.devcontainer/post_attach.sh",
  "mounts": [
    "source=/run/udev/data,target=/run/udev/data,type=bind,consistency=cached",
    "source=/tmp/.X11-unix,target=/tmp/.X11-unix,type=bind,consistency=cached",
    "source=/tmp/.docker.xauth,target=/tmp/.docker.xauth,type=bind,consistency=cached"
  ]
}
